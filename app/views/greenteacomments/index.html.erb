<%= content_for(:title, t('.title')) %>
<div class="mx-auto px-1 py-3 sm:px-1 max-w-3xl text-center">
<div class="p-3.5">
  <h1 class='font-serif text-3xl font-bold text-center'><%= @greentea.name %>の<%= t('.title') %></h1>
</div>
  <!-- コメント一覧 -->
  <div class='p-3'>
    <% if @greentea_greenteacomments.present? %>
      <%= render 'comment', { greenteacomments: @greenteacomments} %>
    <% else %>
      <p><%= t('.no_result') %></p>
    <% end %>
  </div>
  <!-- コメントフォーム -->
  <%= render 'comment_form', { greentea: @greentea, greenteacomment: @greenteacomment} %>
</div>