<%= content_for(:title, t('.title')) %>
<div data-turbo="false">
  <div class="container mx-auto my-4">
    <h1 class='font-serif text-3xl font-bold text-center'><%= t('.title') %></h1>
    <!-- 検索フォーム -->
    <div class="p-3.5">
      <%= render 'search_form', url: greenteas_path %>
    </div>
    <!-- 抹茶スイーツ一覧 -->
    <div class="p-3.5">
      <% if @greenteas.present? %>
        <div class='font-serif text-3xl font-bold text-center' <%= "#{@greenteas.total_count}件ヒットしました！" %>>
        <%= render @greenteas %>
      <% else %>
        <p class='font-serif text-3xl font-bold text-center' <%= t('.no_result') %>>
      <% end %>
    </div>
    <!-- ページネーション -->
    <div class="container mx-14">
      <%= paginate @greenteas %>
    </div>
  </div>
</div>
