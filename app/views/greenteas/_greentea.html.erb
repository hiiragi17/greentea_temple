<div class="gird gird-cols-3 sm-col-span-2 p-3.5">
  <div id="greentea-id-<%= greentea.id %>">
    <div class="card card-side bg-secondary-focus shadow-xl">
      <div class="card-body items-center text-center">
        <%= link_to greentea.name, greentea_path(greentea), class: 'btn btn-wide btn-success', style: 'color: white' %>
        <div class="card-actions justify-end">
          <div class="p-3.5">
            <!-- タグ表示 -->
            <% greentea.genres.each do |genre| %>
            <span class="mx-1 badge badge-accent">
              <%= genre.name %>
            </span>
            <% end %><br>
            <div class="p-3.5">
              <%= greentea.address %><br>
            </div>
            <div class="p-3.5">
              <%= greentea.holiday %><br>
            </div>
            <!-- いいねボタン -->
              <% if logged_in? %>
                <%= render 'greentea_like_button', greentea: greentea%>
              <% else %>
                <%= render 'shared/before_login_like' %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
