<div class="gird gird-cols-3 sm:col-span-2 p-4.5 text-center items-cente">
  <div class="container mx-auto mt-24 py-5 px-5 bg-secondary md:rounded-4xl md:px-20">
  <h1 class='font-serif text-3xl font-bold'><%= @greentea.name %></h1>
  <!-- 抹茶スイーツ店の情報 -->
  <ul class="font-serif text-xl font-bold"><%= @greentea.description %></ul>
  <ul class="font-sans text-lg font-bold">電話番号：<%= @greentea.phone_number %></ul>
  <ul class="font-sans text-lg font-bold">住所：<%= @greentea.address %></ul>
  <ul class="font-sans text-lg font-bold">アクセス：<%= @greentea.access %></ul>
  <ul class="font-sans text-lg font-bold">営業時間：<%= @greentea.business_hours %></ul>
  <ul class="font-sans text-lg font-bold">ホームページ：<%= @greentea.homepage %></ul>
  <ul class="font-sans text-lg font-bold">休日：<%= @greentea.holiday %></ul>
</div>
  <!-- 近くの神社仏閣を表示する -->
  <div class="p-3.5">
    <h2 class='font-serif text-2xl font-bold'>近くの神社仏閣</h2>
  </div>
    <%= render 'shared/temple', { temple: @temple } %>
  </div>
    <!-- タグ表示 -->
    <!-- 戻るリンク -->
    <div class="text-center">
    <%= link_to '検索ページへ戻る', greenteas_path %>
  </div>
</div>
